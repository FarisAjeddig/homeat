{% extends 'layoutadmin.html.twig' %}

{% block title %} {{ parent() }} - Administration - Supprimer le contact  {% endblock %}
{% block header %} {{ parent() }} {% endblock %}

{% block body %}
    <h1 class="center">Les contacts</h1><br><br>
    <h2 class="center">Êtes vous sûr de vouloir supprimer ce contact ?</h2>
    <div class="row container-fluid">
        <div class="col-md-3">
        </div>
        <div class="col-md-6 center">
            <div class="alert alert-primary">
                <strong style="color: #1f3955;">{{ contact.name }}&nbsp;{{ contact.firstName }} ( {{ contact.mail }} - {{ contact.phoneNumber }} ) </strong> vous a contacté :
                <br>
                <strong>Objet : </strong>{{ contact.subject }}<br>
                <strong>Contenu du message : </strong> {{ contact.content }}<br>
            </div>
            <br><br>
        </div>
    </div>
    <div class="container-fluid row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <a href="{{ url('admin_contact_delete', {id: contact.id}) }}" style="text-decoration: none; color:white;">
                <button class="btn btn-block btn-danger">Confirmer la suppression</button>
            </a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
