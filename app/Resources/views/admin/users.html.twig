{% extends 'layoutadmin.html.twig' %}

{% block title %} {{ parent() }} - Administration - Liste des utilisateurs {% endblock %}
{% block header %} {{ parent() }} {% endblock %}

{% block body %}

    <h1 class="center">Les utilisateurs</h1>
    <div class="center">Une page de confirmation sera disponible avant de supprimer un utilisateur, par mesure de sécurité.</div>
    <br>
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8 center">
                    <div class="panel panel-default panel-table">
                        <div class="panel-heading">
                            <div class="row">
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                <tr>
                                    <th class="hidden-xs">ID</th>
                                    <th>Pseudo</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td class="hidden-xs">{{ user.id }}</td>
                                        <td>{{ user.username }}</td>
                                        <td>{{ user.email }}</td>
                                        <td><a href="{{ url('admin_users_confirm_delete', {id: user.id}) }}" class="text-danger">Supprimer l'utilisateur</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <br><br><br><br>


{% endblock %}

{% block stylesheets %}

{% endblock %}
